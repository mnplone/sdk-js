{
	"name": "@kirick/sdk-js",
	"type": "module",
	"main": "dist/esm/main.js",
	"types": "dist/esm/main.d.ts",
	"exports": {
		".": "./dist/esm/main.js",
		"./dev": "./dist/esm/dev.js"
	},
	"engines": {
		"node": ">=21"
	},
	"dependencies": {
		"@extws/client": "^0.2.1-beta.1",
		"valibot": "^0.42.1"
	},
	"devDependencies": {
		"@kirick/eslint-config": "^0.1.30",
		"@types/node": "^22.2",
		"eslint": "9.8.0",
		"typescript": "5.5.4",
		"vitest": "2.1.2"
	},
	"scripts": {
		"build": "rm -r dist ; bun run build:ts && bun run build:cjs # && bun run build:browser",
		"# build:browser": "rm -r dist/browser ; bun run build.ts",
		"build:cjs": "bun build src/main.ts --outfile=dist/main.cjs --platform=node --format=cjs --packages=external",
		"build:ts": "rm -r dist/esm ; tsc && rm dist/esm/websocket.browser.*",
		"lint": "eslint . && tsc --skipLibCheck --noemit",
		"publish:npm": "bun run lint && bun run build && bun run test && npm publish",
		"test": "vitest run --no-file-parallelism && bun test --coverage"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mnplone/sdk-js.git"
	},
	"keywords": [
		"mnplone",
		"monopoly",
		"one",
		"sdk",
		"javascript",
		"typescript"
	],
	"author": "Daniil Kirichenko (https://twitter.com/kirickme)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/mnplone/sdk-js/issues"
	},
	"homepage": "https://github.com/mnplone/sdk-js#readme"
}
